
<h1 class="text-center fw-bold">MKTG Exports</h1>

<% unless params['run'] == 'yes' %>
  <% params['co'] == 'sequoia' ? sequoia_active = 'btn-secondary' : sequoia_active = 'btn-primary' %>
  <% params['co'] == 'empire' ? empire_active = 'btn-secondary' : empire_active = 'btn-primary' %>
  <div class="text-center ">
    <div class="btn-group" role="group" aria-label="Basic example">
      <%= link_to 'Sequoia', mktg_exports_path(co: 'sequoia', delete: 'yes'), class: "#{sequoia_active} btn btn-primary text-light mt-2 w200" %>
      <%= link_to 'Empire', mktg_exports_path(co: 'empire', delete: 'yes'), class: "#{empire_active} btn btn-primary text-light mt-2 w200" %>
    </div>
  </div>
<% end %>
<p id="notice" class="text-center fw-bold"><%= notice %></p>

<!-- UPLOAD, DELETE, EXPORT, PRINT -->
<a class="btn btn-sm btn-light text-secondary bg-gradient border w200" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Upload/Export</a>
<div class="collapse" id="collapseExample">
  <br>
  <p class="fs-4">Upload New List</p>
    <%= form_tag import_mktg_exports_path, multipart: true do %>
    <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
    <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
  <% end %>

  <% if params['remove_all'] == 'yes' %>
    <p><%= link_to "Confirm Delete", mktg_exports_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4 w200' %></p>
  <% else %>
    <p><%= link_to "Remove All Records", mktg_exports_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4 w200' %></p>
  <% end %>
</div>
<br>
<br>
  <p><%= link_to 'Export List (csv)', mktg_exports_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2 w200' %></p>
  <% unless params['delivery_type'].present?  && params['delivery_type'].upcase == 'EMAIL' %><p><%= link_to 'Print View', print_mktg_exports_path(co: params['co'], campaign: params['campaign'], des: params['des']), class: 'btn btn-sm btn-success text-light mt-2 w200', target: '_blank' %></p><% end %>
<!-- END UPLOAD, DELETE, EXPORT, PRINT -->

<div class="m-5">
<% unless params['run'] == 'yes' %>
<!-- INPUT FIELDS -->
<% if params['co'].present? %>
  <div class="row">
    <p>Date Range 1</p>
    <div class="col-2">
      <% if params['range_1_date_1'].present? %>
        <%= text_field_tag "id", '', class: "range_1_date_1_field form-control", placeholder: 'Day 1', value: params['range_1_date_1'] %><br>
      <% else %>
        <%= text_field_tag "id", '', class: "range_1_date_1_field form-control", placeholder: 'Day 1' %><br>
      <% end %>
    </div>
    <div class="col-2">
      <% if params['range_1_date_2'].present? %>
        <%= text_field_tag "id", '', class: "range_1_date_2_field form-control", placeholder: 'Day 2', value: params['range_1_date_2'] %><br>
      <% else %>
        <%= text_field_tag "id", '', class: "range_1_date_2_field form-control", placeholder: 'Day 2' %><br>
      <% end %>
    </div>
  </div>
  <div class="row">
    <p>Date Range 2</p>
    <div class="col-2">
      <% if params['range_2_date_1'].present? %>
        <%= text_field_tag "id", '', class: "range_2_date_1_field form-control", placeholder: 'Day 1', value: params['range_2_date_1'] %><br>
      <% else %>
        <%= text_field_tag "id", '', class: "range_2_date_1_field form-control", placeholder: 'Day 1' %><br>
      <% end %>
    </div>
    <div class="col-2">
      <% if params['range_2_date_2'].present? %>
        <%= text_field_tag "id", '', class: "range_2_date_2_field form-control", placeholder: 'Day 2', value: params['range_2_date_2'] %><br>
      <% else %>
        <%= text_field_tag "id", '', class: "range_2_date_2_field form-control", placeholder: 'Day 2' %><br>
      <% end %>
    </div>
  </div>
  <% end %>
<!-- END INPUT FIELDS -->
<!-- CAMPAIGN BUTTONS SEQUOIA-->
  <% if params['co'] == 'sequoia' %>
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= link_to 'CPA NC', mktg_exports_path(co: 'sequoia', campaign: 'New Customer', des: 'cpa'), class: "#{@sequoia_nc_cpa} w100 search_link btn btn-sm btn-primary text-light bg-gradient" %>
    <%= link_to 'EA NC', mktg_exports_path(co: 'sequoia', campaign: 'New Customer', des: 'ea'), class: "#{@sequoia_nc_ea} w100 search_link btn btn-sm btn-primary text-light bg-gradient" %>
    <%= link_to 'CPA RC', mktg_exports_path(co: 'sequoia', campaign: 'Return Customer', des: 'cpa'), class: "#{@sequoia_rc_cpa} w100 search_link btn btn-sm btn-primary text-light bg-gradient" %>
    <%= link_to 'EA RC', mktg_exports_path(co: 'sequoia', campaign: 'Return Customer', des: 'ea'), class: "#{@sequoia_rc_ea} w100 search_link btn btn-sm btn-primary text-light bg-gradient" %>
  </div>
  <% elsif params['co'] == 'empire' %>
    <%= text_field_tag "id", '', class: "empire_st_field form-control w150", placeholder: 'State', value: params['empire_st']  %> Add multiple states - no common between. Active states: CA NY<br> <br>
    <div class="btn-group" role="group" aria-label="Empire">
      <%= link_to 'New Customer', mktg_exports_path(co: 'empire', campaign: 'New Customer'), class: "#{@empire_nc} w150 search_link btn btn-sm btn-primary text-light bg-gradient" %>
      <%= link_to 'Return Customer', mktg_exports_path(co: 'empire', campaign: 'Return Customer'), class: "#{@empire_rc} w150 search_link btn btn-sm btn-primary text-light bg-gradient" %>
    </div>
  <% end %>
<!-- END CAMPAIGN BUTTONS -->
<% else %> <!-- RUN == YES -->
<h4 class="fw-bold">Campaign Details</h4>
<ul>
  <li><strong>Mail Day:</strong> <%= params['mail_day'].present? ? params['mail_day'].to_date.strftime('%-m/%-d/%Y') : '' %></li>
  <li><strong>Delivery:</strong> <%= params['delivery_type'].present? ? params['delivery_type'].titlecase : '' %></li>
  <li><strong>Company:</strong> <%= params['co'].present? ? params['co'].titlecase : '' %></li>
  <li><strong>Campaign Type:</strong> <%= params['campaign'].present? ? params['campaign'].titlecase : '' %></li>
  <li><strong>Segment:</strong> <%= params['des'].present? ? params['des'].titlecase : '' %></li>
  <% if params['range_1_date_1'].present? && params['range_1_date_2'].present? %><li><strong>Date Range 1:</strong> <%= params['range_1_date_1'].to_date.strftime('%-m/%-d/%Y') %> - <%= params['range_1_date_2'].to_date.strftime('%-m/%-d/%Y') %> <% unless params['campaign'].present? && params['campaign'].upcase == 'NEW CUSTOMER' %>(<strong><%= ((params['range_1_date_1'].to_date - params['mail_day'].to_date).to_i + (params['range_1_date_2'].to_date - params['mail_day'].to_date).to_i) / 2 %></strong> avg days between mail date and EXP)<% end %></li><% end %>
  <% if params['range_2_date_1'].present? && params['range_2_date_2'].present? %><li><strong>Date Range 2:</strong> <%= params['range_2_date_1'].to_date.strftime('%-m/%-d/%Y') %> - <%= params['range_2_date_2'].to_date.strftime('%-m/%-d/%Y') %> <% unless params['campaign'].present? && params['campaign'].upcase == 'NEW CUSTOMER' %>(<strong><%= ((params['range_2_date_1'].to_date - params['mail_day'].to_date).to_i + (params['range_2_date_2'].to_date - params['mail_day'].to_date).to_i) / 2 %></strong> avg days between mail date and EXP)<% end %></li><% end %>
  <% if params['range_3_date_1'].present? && params['range_3_date_2'].present? %><li><strong>Date Range 3:</strong> <%= params['range_3_date_1'].to_date.strftime('%-m/%-d/%Y') %> - <%= params['range_3_date_2'].to_date.strftime('%-m/%-d/%Y') %> <% unless params['campaign'].present? && params['campaign'].upcase == 'NEW CUSTOMER' %>(<strong><%= ((params['range_3_date_1'].to_date - params['mail_day'].to_date).to_i + (params['range_3_date_2'].to_date - params['mail_day'].to_date).to_i) / 2 %></strong> avg days between mail date and EXP)<% end %></li><% end %>
  <li><strong>Campaign Description:</strong></li>
</ul>

<% end %>
<br>
<!-- <h6 class="text-center text-success fw-bold"><%= @dates.present? ? "New dates displayed: #{(@dates.uniq.map{ |date| date.strftime("%Y-%m-%d") }).join(', ')}" : '' %></h6> -->
<table class="table table-striped">
<thead>
<caption class="caption-top">Total Records: <%= number_with_delimiter(MktgExport.count) %> | Display Limit: 250</caption>
<tr class="bg-secondary bg-gradient text-light">
      <th>Uid</th>
      <th>Campaign</th>
      <th><%= params['co'].present? && params['co'] == 'empire' ? 'Lic St' : params['co'].present? && params['co'] == 'sequoia' ? 'DES' : '' %></th>
      <th><%= params['campaign'].present? && params['campaign'] == 'New Customer' ? 'Purchase' : params['campaign'].present? && params['campaign'] == 'Return Customer' ? 'EXP' : 'Date' %></th>
      <% if params['co'] == 'sequoia' && params['campaign'] == 'New Customer' %><th>EXP</th><% end %>
      <th>Email</th>
      <th>Fname</th>
      <th>Lname</th>
      <th>Street 1</th>
      <th>Street 2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Text 1</th>
      <th>Text 2</th>
      <th>Text 3</th>
      <th>Text 4</th>
      <th>Text 5</th>
      <th>Text 6</th>
      <th>Text 7</th>
      <th>Text 8</th>
      <th>Text 9</th>
      <th>Text 10</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mktg_exports.order(exp: :asc).order(uid: :asc).limit(250).each do |mktg_export| %>
      <tr>
        <% if params['co'] == 'sequoia' %>
          <td><a target="_blank" href="https://www.sequoiacpe.com/admin/user-profile?u=<%= mktg_export.uid %>"><%= mktg_export.uid %></a></td>
        <% elsif params['co'] == 'empire' %>
          <td><a target="_blank" href="https://www.empirelearning.com/admin/user-profile?u=<%= mktg_export.uid %>"><%= mktg_export.uid %></a></td>
        <% else %>
          <td><%= mktg_export.uid %></td>
        <% end %>
        <td><%= mktg_export.campaign %></td>
        <td><%= mktg_export.des %></td>
        <td><%= mktg_export.exp %></td>
        <% if params['co'] == 'sequoia' && params['campaign'] == 'New Customer' %><td><%= mktg_export.exp + 1.year %></td><% end %>
        <td><%= mktg_export.email %></td>
        <td><%= mktg_export.fname %></td>
        <td><%= mktg_export.lname %></td>
        <td><%= mktg_export.street_1 %></td>
        <td><%= mktg_export.street_2 %></td>
        <td><%= mktg_export.city %></td>
        <td><%= mktg_export.state %></td>
        <td><%= mktg_export.zip %></td>
        <td><%= mktg_export.text_1 %></td>
        <td><%= mktg_export.text_2 %></td>
        <td><%= mktg_export.text_3 %></td>
        <td><%= mktg_export.text_4 %></td>
        <td><%= mktg_export.text_5 %></td>
        <td><%= mktg_export.text_6 %></td>
        <td><%= mktg_export.text_7 %></td>
        <td><%= mktg_export.text_8 %></td>
        <td><%= mktg_export.text_9 %></td>
        <td><%= mktg_export.text_10 %></td>
        <td><%= link_to 'Show', mktg_export %></td>
        <td><%= link_to 'Edit', edit_mktg_export_path(mktg_export) %></td>
        <td><%= link_to 'Destroy', mktg_export, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<script type="text/javascript">
  $(".search_link").click(function() {
    $(this).attr("href", function() {
      return this.href + "&range_1_date_1=" + $('.range_1_date_1_field').val() + "&range_1_date_2=" + $('.range_1_date_2_field').val() + "&range_2_date_1=" + $('.range_2_date_1_field').val() + "&range_2_date_2=" + $('.range_2_date_2_field').val() + "&empire_st=" + $('.empire_st_field').val();
      // return this.href + "?zip=" + $('.zip_field').val() + "&lname=" + $('.lname_field').val().toUpperCase() + "&state=" + $('.state_field').val().toUpperCase() + "&no_mail=find";
    });
  });
</script>
