<p id="notice"><%= notice %></p>

<h1 class="text-center">CPA Double Accounts</h1>

<p class="fs-4">Upload New List</p>
  <%= form_tag import_master_cpa_double_accounts_path, multipart: true do %>
  <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
  <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
<% end %>

<% if params['remove_all'] == 'yes' %>
  <p><%= link_to "Confirm Delete", master_cpa_double_accounts_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
<% else %>
  <p><%= link_to "Remove All Records", master_cpa_double_accounts_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
<% end %>

<p><%= link_to 'Export List (csv)', master_cpa_double_accounts_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>


<div class="m-5">

<table class="table">
  <thead>
    <caption class="caption-top">Total Records: <%= number_with_delimiter(MasterCpaDoubleAccount.count) %> </caption>
    <tr>
      <th>Lid</th>
      <th>List</th>
      <th>Uid</th>
      <th>Lname</th>
      <th>Search date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_cpa_double_accounts.each do |master_cpa_double_account| %>
      <tr>
        <td><%= master_cpa_double_account.lid %></td>
        <td><%= master_cpa_double_account.list %></td>
        <td><%= master_cpa_double_account.uid %></td>
        <td><%= master_cpa_double_account.lname %></td>
        <td><%= master_cpa_double_account.search_date %></td>
        <td><%= link_to 'Show', master_cpa_double_account %></td>
        <td><%= link_to 'Edit', edit_master_cpa_double_account_path(master_cpa_double_account) %></td>
        <td><%= link_to 'Destroy', master_cpa_double_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
