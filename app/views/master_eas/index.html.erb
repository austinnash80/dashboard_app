<p id="notice"><%= notice %></p>

<h1 class="text-center">Master EAs</h1>

    <p class="fs-4">Upload New List</p>
      <%= form_tag import_master_eas_path, multipart: true do %>
      <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
      <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
    <% end %>

    <% if params['remove_all'] == 'yes' %>
      <p><%= link_to "Confirm Delete", master_eas_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
    <% else %>
      <p><%= link_to "Remove All Records", master_eas_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
    <% end %>

    <p><%= link_to 'Export List (csv)', master_eas_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>


<div class="m-5">

<table class="table table-striped">
  <caption class="caption-top">Total Records: <%= number_with_delimiter(MasterEa.count) %> | Display Limit: 100</caption>
  <thead>
    <tr class="bg-secondary bg-gradient text-light">
      <th>Lid</th>
      <th>List</th>
      <th>Lic</th>
      <th>Fname</th>
      <th>Mi</th>
      <th>Lname</th>
      <th>Suf</th>
      <th>Co</th>
      <th>Add</th>
      <th>Add2</th>
      <th>City</th>
      <th>St</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_eas.limit(100).each do |master_ea| %>
      <tr>
        <td><%= master_ea.lid %></td>
        <td><%= master_ea.list %></td>
        <td><%= master_ea.lic %></td>
        <td><%= master_ea.fname %></td>
        <td><%= master_ea.mi %></td>
        <td><%= master_ea.lname %></td>
        <td><%= master_ea.suf %></td>
        <td><%= master_ea.co %></td>
        <td><%= master_ea.add %></td>
        <td><%= master_ea.add2 %></td>
        <td><%= master_ea.city %></td>
        <td><%= master_ea.st %></td>
        <td><%= master_ea.zip %></td>
        <td><%= link_to 'Show', master_ea %></td>
        <td><%= link_to 'Edit', edit_master_ea_path(master_ea) %></td>
        <td><%= link_to 'Destroy', master_ea, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
