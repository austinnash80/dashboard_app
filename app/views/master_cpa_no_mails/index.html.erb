<p id="notice"><%= notice %></p>

<h1 class="text-center">Master CPA No Mails List</h1>
<p class="text-center"><%= link_to 'Search to add new', sequoia_matchings_no_mail_search_path() %></p>

<p class="fs-4">Upload New List</p>
  <%= form_tag import_master_cpa_no_mails_path, multipart: true do %>
  <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
  <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
<% end %>

<% if params['remove_all'] == 'yes' %>
  <p><%= link_to "Confirm Delete", master_cpa_no_mails_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
<% else %>
  <p><%= link_to "Remove All Records", master_cpa_no_mails_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
<% end %>

<p><%= link_to 'Export List (csv)', master_cpa_no_mails_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>


<div class="w300 m-5"><input class="form-control" id="myInput" type="text" placeholder="Filter Table"></div>
<div class="m-5">

<table class="table">
  <thead>
    <caption class="caption-top">Total Records: <%= number_with_delimiter(MasterCpaNoMail.count) %></caption>
    <tr>
      <th>Lid</th>
      <th>List</th>
      <th>Lname</th>
      <th>Search date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="myTable">
    <% @master_cpa_no_mails.order(created_at: :desc).each do |master_cpa_no_mail| %>
      <tr>
        <td><%= master_cpa_no_mail.lid %></td>
        <td><%= master_cpa_no_mail.list %></td>
        <td><%= master_cpa_no_mail.lname %></td>
        <td><%= master_cpa_no_mail.search_date %></td>
        <td><%= link_to 'More Info', master_cpa_no_mail, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Delete', master_cpa_no_mail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>

<script type="text/javascript">
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });
</script>
