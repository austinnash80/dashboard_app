<h1 class="text-center">Customer Service</h1>
<div class="row">
  <div class="col-lg-4"> <!-- Start column 1 -->
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">Canned Responses</h5>
          <p class="card-text">Answers to frequently asked questions </p>
            <div class="btn-group" role="group" aria-label="">
              <%= link_to 'Sequoia', canned_responses_path(company: 'sequoia'), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
              <%= link_to 'Empire', canned_responses_path(company: 'empire'), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
              <%= link_to 'Pacific', canned_responses_path(company: 'pacific'), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
              <%= link_to 'TPCE', canned_responses_path(company: 'tax-preparers'), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
            </div>
        </div>
      </div>
    </div>
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">No Mail Requests - Sequoia</h5>
          <p class="card-text">Search for licensees that request removal from direct mail marketing campaigns</p>
            <div class="btn-group" role="group" aria-label="">
              <%= link_to 'CPA', sequoia_matchings_no_mail_search_path(), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
              <%= link_to 'EA', sequoia_matchings_ea_no_mail_search_path(), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
            </div>
        </div>
      </div>
    </div>
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">Customer Matching - Sequoia</h5>
          <p class="card-text">Matching customers (UID) to master state lists (LID)</p>
          <div class="btn-group" role="group" aria-label="">
            <%= link_to 'CPA', sequoia_matchings_cpa_customer_matching_path, class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
            <%= link_to 'EA', sequoia_matchings_ea_customer_matching_path, class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
            <%= link_to 'Info', sequoia_matchings_info_path, class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
          </div>
        </div>
      </div>
    </div>
  </div> <!-- END column -->
  <div class="col-lg-4"> <!-- Start column 2 -->
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">Marketing Materials</h5>
          <p class="card-text">Archive of past mailed marketing postcards</p>
          <div class="btn-group" role="group" aria-label="">
            <%= link_to 'Sequoia', mktg_materials_path(co: 'sequoia'), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
            <%= link_to 'Empire', mktg_materials_path(co: 'empire'), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
            <%= link_to 'Pacific', mktg_materials_path(co: 'pacific'), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
          </div>
        </div>
      </div>
    </div>
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">Postcard Mailing Schedule</h5>
          <p class="card-text">Schedule for different postcard campaigns with expiration dates</p>
            <div class="btn-group" role="group" aria-label="">
              <%= link_to 'View Today', day_mktg_postcards_path(day: Date.today.strftime('%Y-%m-%d')), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
              <%= link_to 'View Index', mktg_postcards_path(), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
            </div>
        </div>
      </div>
    </div>
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">Postcard Data Exports</h5>
          <p class="card-text">Returning customer in-house postcard mailing data - Generate list and PDFs for printing</p>
          <div class="btn-group" role="group" aria-label="">
            <%= link_to 'Sequoia', mktg_exports_path(co: 'sequoia', delete: 'yes'), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
            <%= link_to 'Empire', mktg_exports_path(co: 'empire', delete: 'yes'), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
          </div>
        </div>
      </div>
    </div>
  </div><!-- END column -->
  <div class="col-lg-4">
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">Sequoia Courses</h5>
          <p class="card-text">Status - Text: <span class="danger"><%= @courses_counter_text %></span> | Exam: <span class="danger"><%= @courses_counter_exam %></span> | Not Proofed: <span class="danger"><%= @courses_counter_proof %></span></p>
          <div class="btn-group" role="group" aria-label="">
            <%= link_to 'PES', courses_pes_path(), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
            <%= link_to 'Sequoia', courses_sequoia_path(), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
            <%= link_to 'In Progress', in_progress_courses_sequoia_path(), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
          </div>
        </div>
      </div>
    </div>
    <div class="m-4">
      <div class="card bg-light bg-gradient">
        <div class="card-body">
          <h5 class="card-title fw-bold">Pacific Courses</h5>
          <p class="card-text">Course tables - for course updates and new courses</p>
          <div class="btn-group" role="group" aria-label="">
            <%= link_to 'Courses', courses_pacifics_path(), class: 'btn btn-sm btn-secondary text-light bg-gradient w100' %>
            <%= link_to "In Progress (#{CoursesPacific.where(update_sheet: true).count})", courses_pacifics_path(display: 'in_progress'), class: 'btn btn-sm btn-secondary text-light bg-gradient w150' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
