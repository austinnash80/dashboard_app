<p id="notice"><%= notice %></p>

<h1 class="text-center">Empire Manual Matches</h1>
<div class="m-5">

<a class="btn btn-sm btn-light text-secondary bg-gradient border" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Upload/Export</a>
<div class="collapse" id="collapseExample">
  <br>
  <p class="fs-4">Upload New List</p>
    <%= form_tag import_empire_customers_path, multipart: true do %>
    <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
    <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
  <% end %>

  <% if params['remove_all'] == 'yes' %>
    <p><%= link_to "Confirm Delete", empire_customers_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
  <% else %>
    <p><%= link_to "Remove All Records", empire_customers_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
  <% end %>

  <p><%= link_to 'Export List (csv)', empire_customers_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>
</div>
<br><br>
<table class="table table-striped table-outline">
  <thead>
    <tr class="bg-secondary bg-gradient text-light">
      <th>Match</th>
      <th>Uid</th>
      <th>Lic State</th>
      <th>Lid</th>
      <th>List</th>
      <th>Lic</th>
      <th>Lname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empire_manual_matches.order(created_at: :desc).each do |empire_manual_match| %>
      <tr>
        <td><%= empire_manual_match.match %></td>
        <td><%= empire_manual_match.uid %></td>
        <td><%= empire_manual_match.lic_state %></td>
        <td><%= empire_manual_match.lid %></td>
        <td><%= empire_manual_match.list %></td>
        <td><%= empire_manual_match.lic %></td>
        <td><%= empire_manual_match.lname %></td>
        <td><%= link_to 'Show', empire_manual_match %></td>
        <td><%= link_to 'Edit', edit_empire_manual_match_path(empire_manual_match) %></td>
        <td><%= link_to 'Destroy', empire_manual_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%#= link_to 'New Empire Manual Match', new_empire_manual_match_path %>

</div>
