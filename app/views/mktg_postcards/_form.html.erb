
<%= simple_form_for(@mktg_postcard) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :campaign %>
    <%= f.input :company %>
    <%= f.input :mail_day %>
    <%= f.input :range_1_a %>
    <%= f.input :range_1_b %>
    <%= f.input :range_2_a %>
    <%= f.input :range_2_b %>
    <%= f.input :done %>
    <%= f.input :cpa_sent %>
    <%= f.input :ea_sent %>
    <%= f.input :notes %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
