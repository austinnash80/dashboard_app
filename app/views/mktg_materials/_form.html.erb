
<%= simple_form_for(@mktg_material) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :co, label: 'Company', as: :select, collection: ['Sequoia','Empire', 'Pacific', 'Other'] %>
    <%= f.input :campaign, as: :select, collection: ['Direct Mail','Return Customer', 'New Customer', 'Other'] %>
    <%= f.input :name, hint: 'ex: 2021.6 - CPA' %>
    <%= f.input :land_date %>
    <%= f.input :delivered_to %>
    <%= f.input :quantity %>
    <%= f.input :link_name, label: 'Link to Material', hint: 'ex: https://mktg-materials.s3.amazonaws.com/2021.5+-+CPA.pdf' %>
  </div>

  <div class="form-actions mt-3">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary text-light bg-gradient'  %>
  </div>
<% end %>
