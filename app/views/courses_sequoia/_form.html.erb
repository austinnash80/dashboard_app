
<%= simple_form_for(@courses_sequoium) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :version_update %>
    <%= f.input :new %>
    <%= f.input :number %>
    <%= f.input :version %>
    <%= f.input :title %>
    <%= f.input :category %>
    <%= f.input :sub_category %>
    <%= f.input :hours %>
    <%= f.input :pub_date %>
    <%= f.input :pes_number %>
    <%= f.input :pes_version %>
    <%= f.input :text %>
    <%= f.input :exam %>
    <%= f.input :active %>
    <%= f.input :update_sheet %>
    <%= f.input :notes %>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary text-light bg-gradient w100' %>
  </div>
<% end %>
