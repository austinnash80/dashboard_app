<p id="notice"><%= notice %></p>

<div class="text-center">
  <h1>Pacific Courses </h1>
  <div class="m-2 btn-group">
    <%= link_to 'Master Courses', courses_pacifics_path(), class: 'btn btn-sm btn-primary text-light bg-gradient w150' %>
    <%= link_to 'Pacific Courses', courses_pacifics_path(display: 'pacific_courses'), class: 'btn btn-sm btn-primary text-light bg-gradient w150' %>
    <%= link_to 'In Progress', courses_pacifics_path(display: 'in_progress'), class: 'btn btn-sm btn-primary text-light bg-gradient w150' %>
  </div>
</div>

<a class="btn btn-sm btn-light text-secondary bg-gradient border" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Upload/Export</a>
<div class="collapse" id="collapseExample">
  <br>
  <p class="fs-4">Upload New List</p>
    <%= form_tag import_courses_pacifics_path, multipart: true do %>
    <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
    <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
  <% end %>

  <% if params['remove_all'] == 'yes' %>
    <p><%= link_to "Confirm Delete", courses_pacifics_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
  <% else %>
    <p><%= link_to "Remove All Records", courses_pacifics_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
  <% end %>

  <p><%= link_to 'Export List (csv)', courses_pacifics_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>
</div>


<div class="m-5">
  <div class="w300">
    <%= text_field_tag "id", '', class: "course_number_field form-control", value: params['course_number'], placeholder: 'Search All Courses' %>
    <p> Search by course number only (no version) </p>
    <%= link_to 'Search', courses_pacifics_path(), class: 'search_link btn btn-sm btn-primary gb-gradient w150 text-light' %>
  </div>
  <br><br>

  <div class="w300 mb-3 mt-4"><input class="form-control" id="myInput" type="text" placeholder="Filter Table"></div>

<% if params['display'] == 'pacific_courses' %>
  <table class="table table-striped">
    <caption class="caption-top">Pacific Courses | Total Active: <%= number_with_delimiter(CoursesPacific.where(active: true).count) %> </caption>
    <thead>
      <tr class="bg-secondary bg-gradient text-light">
        <th>Number</th>
        <th>Version</th>
        <th>Title</th>
        <th>Hours</th>
        <th>Category</th>
        <th>Sub category</th>
        <th>Pub date</th>
        <th>Sequoia number</th>
        <th>Sequoia version</th>
        <th>Text</th>
        <th>Exam</th>
        <th>Active</th>
        <th>New</th>
        <th>Version update</th>
        <th>Update sheet</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses_pacifics.order(number: :ASC).each do |courses_pacific| %>
        <tr>
          <td class="fw-bold"><%= link_to courses_pacific.number , courses_pacific, class: 'link_style text-primary' %></td>
          <td><%= courses_pacific.version %></td>
          <td><%= courses_pacific.title %></td>
          <td><%= courses_pacific.hours %></td>
          <td><%= courses_pacific.category %></td>
          <td><%= courses_pacific.sub_category %></td>
          <td><%= courses_pacific.pub_date %></td>
          <td><%= courses_pacific.sequoia_number %></td>
          <td><%= courses_pacific.sequoia_version %></td>
          <td><%= courses_pacific.text %></td>
          <td><%= courses_pacific.exam %></td>
          <td><%= courses_pacific.active %></td>
          <td><%= courses_pacific.new %></td>
          <td><%= courses_pacific.version_update %></td>
          <td><%= courses_pacific.update_sheet %></td>
          <td><%= courses_pacific.notes %></td>
          <td><%= link_to 'Show', courses_pacific %></td>
          <td><%= link_to 'Edit', edit_courses_pacific_path(courses_pacific) %></td>
          <td><%= link_to 'Destroy', courses_pacific, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% elsif params['display'] == 'in_progress' %> <!-- In Progress Courses -->
    <table class="table table-striped">
      <caption class="caption-top">Pacific Courses | Total Active: <%= number_with_delimiter(CoursesPacific.where(active: true).count) %> </caption>
      <thead>
        <tr class="bg-secondary bg-gradient text-light">
          <th>Type</th>
          <th>Number</th>
          <th>Version</th>
          <th>Title</th>
          <th>Hours</th>
          <th>Category</th>
          <th>Sub category</th>
          <th>Pub date</th>
          <th>Sequoia number</th>
          <th>Sequoia version</th>
          <th>Text</th>
          <th>Exam</th>
          <th>Active</th>
          <th></th>
          <th>Notes</th>
          <!-- <th colspan="3"></th> -->
        </tr>
      </thead>

      <tbody>
        <% @courses_pacifics.where(update_sheet: true).order(created_at: :DESC).each do |courses_pacific| %>
          <tr>
            <td class=""><%= courses_pacific.version_update? ? 'Update' : courses_pacific.new? ? 'New' : '' %></td>
            <td class="fw-bold"><%= link_to courses_pacific.number, courses_pacific, class: 'text-dark' %></td>
            <td><%= courses_pacific.version %></td>
            <td><%= courses_pacific.title %></td>
            <td><%= courses_pacific.hours %></td>
            <td><%= courses_pacific.category %></td>
            <td><%= courses_pacific.sub_category %></td>
            <td><%= courses_pacific.pub_date %></td>
            <td><%= courses_pacific.sequoia_number %></td>
            <td><%= courses_pacific.sequoia_version %></td>
            <% if courses_pacific.text? %>
              <td><i class="fas fa-check-circle text-success fa-2x"></td>
            <% else %>
              <td><%= link_to 'NO', courses_pacifics_path(display: 'in_progress', course_id: courses_pacific.id, update: 'text'), class: 'btn btn-danger btn-sm bg-gradient w50 text-light' %></td>
            <% end %>
            <% if courses_pacific.exam? %>
              <td><i class="fas fa-check-circle text-success fa-2x"></td>
            <% else %>
              <td><%= link_to 'NO', courses_pacifics_path(display: 'in_progress', course_id: courses_pacific.id, update: 'exam'), class: 'btn btn-danger btn-sm bg-gradient w50 text-light' %></td>
            <% end %>
            <% if courses_pacific.active? %>
              <td><i class="fas fa-check-circle text-success fa-2x"></td>
            <% else %>
              <td><%= link_to 'NO', courses_pacifics_path(display: 'in_progress', course_id: courses_pacific.id, update: 'active'), class: 'btn btn-danger btn-sm bg-gradient w50 text-light' %></td>
            <% end %>
            <% if courses_pacific.active? &&  courses_pacific.exam? && courses_pacific.text? %>
              <td><%= link_to 'Remove', courses_pacifics_path(display: 'in_progress', course_id: courses_pacific.id, update: 'update_sheet'), class: 'btn btn-sm btn-secondary text-light w100' %></td>
            <% else %>
              <td></td>
            <% end %>
            <td><%= courses_pacific.notes %></td>
            <!-- <td><%= link_to 'Show', courses_pacific %></td> -->
            <!-- <td><%= link_to 'Edit', edit_courses_pacific_path(courses_pacific) %></td> -->
            <!-- <td><%= link_to 'Destroy', courses_pacific, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
          </tr>
        <% end %>
      </tbody>
    </table>
<% else %> <!-- Master Courses -->

  <table class="table table-striped">
    <caption class="caption-top">Master Courses</caption>
    <thead>
      <tr class="bg-secondary bg-gradient text-light">
        <th>Master Number</th>
        <th>Pacific Courses</th>
        <th>Sequoia Course</th>
        <th>Hours</th>
        <th>Category</th>
        <th>Sub category</th>
        <th>Pub date</th>
        <th>PES</th>
        <th>Sequoia Active</th>
        <th>Notes</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% pacific_course_sequoia_number = CoursesPacific.all.pluck(:sequoia_number) %>
      <% master_courses = CoursesSequoium.where(number: pacific_course_sequoia_number).all %>
      <% master_courses.order(number: :asc).each do |master_course| %>
        <% pacific_course_count = CoursesPacific.where(sequoia_number: master_course.number).where(sequoia_version: master_course.version).count %>
        <% pacific_course_master = CoursesPacific.where(sequoia_number: master_course.number).where(sequoia_version: master_course.version).pluck(:number) %>
        <% master_link_id = CoursesPacific.find_by(number: pacific_course_master[0]) %>
        <tr>
          <td class="fw-bold"><%= link_to pacific_course_master[0].to_s.first(3), courses_pacific_path(id: master_link_id.id), class: 'link_style text-primary' %></td>
          <td><%= pacific_course_count %></td>
          <td><%= master_course.number %><%= master_course.version %> - <%= master_course.title %></td>
          <td><%= master_course.hours %></td>
          <td><%= master_course.category %></td>
          <td><%= master_course.sub_category %></td>
          <td><%= master_course.pub_date %></td>
          <td><%= master_course.pes_number %><%= master_course.pes_version %></td>
          <% if master_course.active? %>
            <td class="fw-bold text-success">YES</td><% else %><td class="fw-bold text-danger">NO</td>
          <% end %>
          <td><%= master_course.notes %></td>
          <td><%#= link_to 'Show', courses_pacific %></td>
          <td><%#= link_to 'Edit', edit_courses_pacific_path(courses_pacific) %></td>
          <td><%#= link_to 'Destroy', courses_pacific, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


<%= link_to 'New Courses Pacific', new_courses_pacific_path %>

<script type="text/javascript">
  $(document).ready(function(){
    $("#myInput").on("keyup", function() {
      var value = $(this).val().toLowerCase();
      $("#myTable tr").filter(function() {
        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
      });
    });
  });

  $(".search_link").click(function() {
    $(this).attr("href", function() {
      return this.href + "?course_number=" + $('.course_number_field').val().toUpperCase();
    });
  });
</script>
