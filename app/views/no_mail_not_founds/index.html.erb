<p id="notice"><%= notice %></p>

<h1 class="text-center">No Mail Not Founds</h1>
<p class="text-center"><%= link_to 'Add New', new_no_mail_not_found_path(), class: 'btn btn-primary bg-gradient text-light w150' %></p>

<a class="btn btn-sm btn-light text-secondary bg-gradient border" data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">Upload/Export</a>
<div class="collapse" id="collapseExample">
  <br>
  <p class="fs-4">Upload New List</p>
    <%= form_tag import_no_mail_not_founds_path, multipart: true do %>
    <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
    <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
  <% end %>

  <% if params['remove_all'] == 'yes' %>
    <p><%= link_to "Confirm Delete", no_mail_not_founds_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
  <% else %>
    <p><%= link_to "Remove All Records", no_mail_not_founds_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
  <% end %>

  <p><%= link_to 'Export List (csv)', no_mail_not_founds_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>
</div>

<div class="m-5">

<table class="table table-striped">
<thead>
<caption class="caption-top">Total Records: <%= number_with_delimiter(NoMailNotFound.count) %> | Display Limit: 250</caption>
<tr class="bg-secondary bg-gradient text-light">
      <th>Company</th>
      <th>Fname</th>
      <th>Mi</th>
      <th>Lname</th>
      <th>Suf</th>
      <th>Co</th>
      <th>Add</th>
      <th>Add2</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Note</th>
      <th>Des</th>
      <th>Lic state</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @no_mail_not_founds.order(updated_at: :DESC).limit(250).each do |no_mail_not_found| %>
      <tr>
        <td><%= no_mail_not_found.company %></td>
        <td><%= no_mail_not_found.fname %></td>
        <td><%= no_mail_not_found.mi %></td>
        <td><%= no_mail_not_found.lname %></td>
        <td><%= no_mail_not_found.suf %></td>
        <td><%= no_mail_not_found.co %></td>
        <td><%= no_mail_not_found.add %></td>
        <td><%= no_mail_not_found.add2 %></td>
        <td><%= no_mail_not_found.city %></td>
        <td><%= no_mail_not_found.state %></td>
        <td><%= no_mail_not_found.zip %></td>
        <td><%= no_mail_not_found.note %></td>
        <td><%= no_mail_not_found.des %></td>
        <td><%= no_mail_not_found.lic_state %></td>
        <td><%= link_to 'Show', no_mail_not_found %></td>
        <td><%= link_to 'Edit', edit_no_mail_not_found_path(no_mail_not_found) %></td>
        <td><%= link_to 'Destroy', no_mail_not_found, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
