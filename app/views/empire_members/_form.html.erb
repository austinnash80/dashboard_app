
<%= simple_form_for(@empire_member) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <div class="row m-2">
      <div class="col-lg-6"><%= f.input :uid %></div>
      <div class="col-lg-6"><%= f.input :lname %></div>
    </div>
    <div class="row m-2">
      <div class="col-lg-12"><%= f.input :email %></div>
    </div>
    <div class="row m-2">
      <div class="col-lg-12"><%= f.input :first_purchase, include_blank: true %></div>
    </div>
    <div class="row m-2">
      <div class="col-lg-12"><%= f.input :last_purchase, include_blank: true %></div>
    </div>
    <div class="row m-2">
      <div class="col-lg-6"><%= f.input :state %></div>
      <div class="col-lg-6"><%= f.input :purchases %></div>
    </div>
    <div class="row m-2">
      <div class="col-lg-12"><%= f.input :email_unsubscribe %></div>
    </div>
  </div>
  <div class="form-actions m-3">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary btn-gradiant w100' %>
  </div>
<br>
<% end %>
