<p id="notice"><%= notice %></p>

<h1 class="text-center">Master CPA Matches</h1>
<p class="text-center"><%= link_to 'CPA Search', sequoia_matchings_cpa_customer_matching_path, class: 'btn btn-sm btn-primary text-light m-2 w150 gb-gradient' %></p>

<p class="fs-4">Upload New List</p>
  <%= form_tag import_master_cpa_matches_path, multipart: true do %>
  <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
  <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
<% end %>

<% if params['remove_all'] == 'yes' %>
  <p><%= link_to "Confirm Delete", master_cpa_matches_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
<% else %>
  <p><%= link_to "Remove All Records", master_cpa_matches_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
<% end %>

<p><%= link_to 'Export List (csv)', master_cpa_matches_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>


<div class="m-5">

<table class="table table-striped">
  <thead>
    <caption class="caption-top">Total Records: <%= number_with_delimiter(MasterCpaMatch.count) %> | Display Limit: 250</caption>
    <tr class="bg-secondary bg-gradient text-light">
      <th>Lid</th>
      <th>List</th>
      <th>Uid</th>
      <th>Lname</th>
      <th>Search date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_cpa_matches.limit(250).each do |master_cpa_match| %>
      <tr>
        <td><%= master_cpa_match.lid %></td>
        <td><%= master_cpa_match.list %></td>
        <td><%= master_cpa_match.uid %></td>
        <td><%= master_cpa_match.lname %></td>
        <td><%= master_cpa_match.search_date %></td>
        <td><%= link_to 'Show', master_cpa_match %></td>
        <td><%= link_to 'Edit', edit_master_cpa_match_path(master_cpa_match) %></td>
        <td><%= link_to 'Delete', master_cpa_match, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
