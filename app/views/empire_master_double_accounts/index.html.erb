<p id="notice"><%= notice %></p>

<h1 class="text-center">Empire Master Double Accounts</h1>
<p class="fs-4">Upload New List</p>
  <%= form_tag import_empire_master_double_accounts_path, multipart: true do %>
  <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
  <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
<% end %>

<% if params['remove_all'] == 'yes' %>
  <p><%= link_to "Confirm Delete", empire_master_double_accounts_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
<% else %>
  <p><%= link_to "Remove All Records", empire_master_double_accounts_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
<% end %>

<p><%= link_to 'Export List (csv)', empire_master_double_accounts_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>


<div class="m-5">

<table class="table table-striped">
  <thead>
    <caption class="caption-top">Total Records: <%= number_with_delimiter(EmpireMasterDoubleAccount.count) %> </caption>
    <tr class="bg-secondary bg-gradient text-light">
      <th>Uid</th>
      <th>Lic st</th>
      <th>List</th>
      <th>Lname</th>
      <th>Search date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @empire_master_double_accounts.each do |empire_master_double_account| %>
      <tr>
        <td><%= empire_master_double_account.uid %></td>
        <td><%= empire_master_double_account.lic_st %></td>
        <td><%= empire_master_double_account.list %></td>
        <td><%= empire_master_double_account.lname %></td>
        <td><%= empire_master_double_account.search_date %></td>
        <td><%= link_to 'Show', empire_master_double_account %></td>
        <td><%= link_to 'Edit', edit_empire_master_double_account_path(empire_master_double_account) %></td>
        <td><%= link_to 'Destroy', empire_master_double_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
