      </ul>
      <h4 class="bold">States</h4>
      <ul>
      <% MktgExport.pluck(:des).tally.each do |k,v| %>
        <li><span class="bold"><%= k %>:</span> <%= v.present? ? number_with_delimiter(v) : ''%></li>
      <% end %>
      </ul>
