<p id="notice"><%= notice %></p>

<h1 class="text-center">Master CPAs</h1>

    <p class="fs-4">Upload New List</p>
    <%= form_tag import_master_cpas_path, multipart: true do %>
      <%= file_field_tag :file, class: 'btn btn-sm btn-light' %>
      <%= submit_tag 'Upload', class: 'btn btn-sm btn-primary text-light' %>
    <% end %>

    <% if params['remove_all'] == 'yes' %>
      <p><%= link_to "Confirm Delete", master_cpas_path(remove_all: 'yes', confirm: 'yes'), class: 'btn btn-sm btn-danger mt-4' %></p>
    <% else %>
      <p><%= link_to "Remove All Records", master_cpas_path(remove_all: 'yes'), class: 'btn btn-sm btn-warning mt-4' %></p>
    <% end %>

    <p><%= link_to 'Export List (csv)', master_cpas_path('csv'), class: 'btn btn-sm btn-secondary text-light mt-2' %></p>


<div class="m-5">
<table class="table table-striped">
  <thead>
    <caption class="caption-top">Total Records: <%= number_with_delimiter(MasterCpa.count) %> | Display Limit: 500</caption>
    <tr class="bg-secondary bg-gradient text-light">
      <th>Lid</th>
      <th>List</th>
      <th>Lic st</th>
      <th>Lic</th>
      <th>Fname</th>
      <th>Mi</th>
      <th>Lname</th>
      <th>Suf</th>
      <th>Co</th>
      <th>Add</th>
      <th>Add2</th>
      <th>City</th>
      <th>St</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @master_cpas.limit(500).each do |master_cpa| %>
      <tr>
        <td><%= master_cpa.lid %></td>
        <td><%= master_cpa.list %></td>
        <td><%= master_cpa.lic_st %></td>
        <td><%= master_cpa.lic %></td>
        <td><%= master_cpa.fname %></td>
        <td><%= master_cpa.mi %></td>
        <td><%= master_cpa.lname %></td>
        <td><%= master_cpa.suf %></td>
        <td><%= master_cpa.co %></td>
        <td><%= master_cpa.add %></td>
        <td><%= master_cpa.add2 %></td>
        <td><%= master_cpa.city %></td>
        <td><%= master_cpa.st %></td>
        <td><%= master_cpa.zip %></td>
        <td><%= link_to 'Show', master_cpa %></td>
        <td><%= link_to 'Edit', edit_master_cpa_path(master_cpa) %></td>
        <td><%= link_to 'Destroy', master_cpa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
