
<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs w300">
    <%= f.input :name, label: false, placeholder: 'Name', input_html: {class: 'form-control-lg mt-3'} %>
    <%= f.input :password,label: false, placeholder: 'Password', input_html: {class: 'form-control-lg mt-3'} %>
    <%= f.input :password_confirmation, label: false, placeholder: 'Password Confirmation', input_html: {class: 'form-control-lg mt-3'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-lg btn-primary mt-3' %>
  </div>
<% end %>
