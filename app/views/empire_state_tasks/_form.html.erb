
<%= simple_form_for(@empire_state_task) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%#= f.input :empire_state_id %>
    <div class="row">
      <div class="col-md-2">
        <%= f.input :step_number, label: 'Step' %>
      </div>
      <div class="col-md-10">
      </div>
    </div>
    <br>
    <%= f.input :step_name, label: 'Step Name' %>
    <br>

    <%= f.input :details, input_html: {rows: 4} %>
    <br>
    <%= f.input :assigned %>
    <br>
    <%= f.input :due_date %>
    <br>
    <div class="row">
      <div class="col-md-3">
        <%= f.input :completed %>
      </div>
      <div class="col-md-9">
        <%= f.input :completed_date %>
      </div>
    </div>
    <br>
    <%= f.input :task_notes, input_html: {rows: 4} %>
  </div>
<br><br>
  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-primary' %>
  </div>
<% end %>
